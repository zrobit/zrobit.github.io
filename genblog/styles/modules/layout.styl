_main_width = 1200px

body
  font-family sans-serif
  font-size 1em

article
  h1
    font-weight 600
    color darken(#fff, 70)
    font-size 2em
    margin 0 0 .58em
    line-height 1.4

  h2, h3
    font-weight 100
    color darken(#fff, 65)
    font-size 1.41em
    line-height 1.4
    margin 0 0 .95em

  p
    color darken(#fff, 55)
    font-size 1.08em
    font-weight normal
    line-height 1.45
    margin 0 0 1.1em


  ul
    color darken(#fff, 55)
    margin 0 0 1.2em

  li
    font-size 1.08em
    line-height 1.45
    margin 0 0 0em

  a
    color darken(#fff, 70)

// header
.header
  position fixed
  top 0
  height 50px
  width 100%
  padding 0 10px 0
  box-sizing border-box


.header-inner
  max-width _main_width
  height 100%
  margin 0 auto
  box-sizing border-box

// content
.content
  @extend $clearfix

.content-inner
  margin 0 auto
  padding 39px 10px 0
  max-width _main_width


h2
  font-size 40px
  margi 0
  padding 0

// footer
.footer
  height 300px

.footer-inner
  margin 0 auto
  max-width _main_width
