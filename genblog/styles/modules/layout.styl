_main_width = 1200px

body
  font-family sans-serif

article
  h1
    font-weight 600
    color darken(#fff, 70)
    font-size 27px
    margin-top 0
    line-height 1.2

  h2, h3
    font-weight 100
    color darken(#fff, 65)
    font-size 22px
    margin-top 0

  p, ul, a
    font-size 16px
    font-weight 400

  p, ul
    color darken(#fff, 55)
    line-height 1.6

  a
    color darken(#fff, 70)

// header
.header
  position fixed
  top 0
  height 50px
  width 100%
  padding 0 10px 0
  box-sizing border-box


.header-inner
  max-width _main_width
  height 100%
  margin 0 auto
  box-sizing border-box

// content
.content
  @extend $clearfix

.content-inner
  margin 0 auto
  padding 50px 10px 0
  max-width _main_width


h2
  font-size 40px
  margi 0
  padding 0

// footer
.footer
  height 300px

.footer-inner
  margin 0 auto
  max-width _main_width
